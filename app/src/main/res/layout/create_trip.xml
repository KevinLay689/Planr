<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/tripName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Trip Name"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/tripDateStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Start Date"
        app:layout_constraintTop_toBottomOf="@id/tripName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tripDateEnd"/>

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/tripName"
        app:layout_constraintStart_toEndOf="@id/tripDateStart"
        app:layout_constraintEnd_toStartOf="@id/tripDateEnd"
        app:layout_constraintBottom_toBottomOf="@id/tripDateEnd"/>

    <EditText
        android:id="@+id/tripDateEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="End Date"
        app:layout_constraintTop_toBottomOf="@id/tripName"
        app:layout_constraintStart_toEndOf="@id/tripDateStart"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/tripInvites"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Friends to invite"
        app:layout_constraintTop_toBottomOf="@id/tripDateStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/addEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Add Event"
        app:layout_constraintTop_toBottomOf="@+id/tripInvites"/>

</android.support.constraint.ConstraintLayout>